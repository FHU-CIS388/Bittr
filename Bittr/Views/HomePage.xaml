<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Bittr.Views.HomePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BITTR">

    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>


                <StackLayout
                    Grid.Row="0"
                    Padding="16"
                    HorizontalOptions="StartAndExpand"
                    Orientation="Horizontal">

                    <StackLayout Orientation="Vertical">
                        <Label
                            Margin="0,0,32,0"
                            FontFamily="{StaticResource RegularFont}"
                            FontSize="24"
                            HorizontalOptions="FillAndExpand"
                            HorizontalTextAlignment="End"
                            Text="What are you " />

                        <Label
                            Margin="0,0,32,0"
                            FontFamily="{StaticResource BoldFont}"
                            FontSize="50"
                            HorizontalOptions="FillAndExpand"
                            HorizontalTextAlignment="End"
                            Text="BITTER" />

                        <Label
                            Margin="0,0,32,0"
                            FontFamily="{StaticResource RegularFont}"
                            FontSize="24"
                            HorizontalOptions="FillAndExpand"
                            HorizontalTextAlignment="End"
                            Text="about today?" />

                    </StackLayout>

                    <Image
                        HorizontalOptions="Start"
                        Source="lemon1"
                        WidthRequest="100" />

                </StackLayout>

                <ListView
                    Grid.Row="2"
                    Margin="20,10,20,10"
                    HasUnevenRows="True"
                    ItemsSource="{Binding Complaints}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Frame Margin="0,10,0,10" BorderColor="Black">
                                    <StackLayout Grid.Row="2" Orientation="Vertical">

                                        <Image
                                            HorizontalOptions="Start"
                                            Source="profile2"
                                            TranslationX="-10"
                                            TranslationY="-10"
                                            WidthRequest="35" />
                                        <ImageButton
                                            Margin="0,-38,-8,0"
                                            BackgroundColor="Transparent"
                                            HeightRequest="30"
                                            HorizontalOptions="End"
                                            Source="report.png"
                                            TranslationY="-14" />

                                        <Label
                                            Margin="34,-46,0,0"
                                            FontSize="Medium"
                                            Text="{Binding Creator.Username}" />
                                        <Label
                                            Margin="0,10,0,5"
                                            FontSize="Large"
                                            HorizontalOptions="Start"
                                            Text="{Binding Text}" />

                                        <Image
                                            Aspect="AspectFit"
                                            HorizontalOptions="FillAndExpand"
                                            Source="{Binding ImageName}" />

                                        <Label
                                            Margin="0,2,0,-5"
                                            FontSize="Caption"
                                            Text="{Binding TimeStamp}" />

                                        
                                        
                                        <ProgressBar 
                                            Progress="0.5" 
                                            ProgressColor="Green" 
                                            WidthRequest="130"
                                            Margin="0,7,0,-10"/>

                                        <ImageButton
                                            Margin="0,5,0,-10"
                                            BackgroundColor="Transparent"
                                            HeightRequest="40"
                                            HorizontalOptions="Start"
                                            Source="down.png" />
                                        <ImageButton
                                            Margin="0,5,0,-50"
                                            BackgroundColor="Transparent"
                                            HeightRequest="40"
                                            HorizontalOptions="Start"
                                            Source="up.png"
                                            TranslationX="50"
                                            TranslationY="-42" />
                                        <ImageButton
                                            Margin="0,5,0,-50"
                                            BackgroundColor="Transparent"
                                            HeightRequest="40"
                                            HorizontalOptions="End"
                                            Source="lemonheart.png"
                                            TranslationX="10"
                                            TranslationY="-42" />

                                    </StackLayout>

                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
