<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="BITTR" x:Class="Bittr.Views.HomePage">

    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <StackLayout Grid.Row="0" Orientation="Horizontal" HorizontalOptions="StartAndExpand" Padding="16">

                <StackLayout Orientation="Vertical">
                    <Label Margin="0, 0, 32, 0" FontSize="24" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="End" Text="What are you " />

                    <Label Margin="0, 0, 32, 0" FontSize="72" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="End" Text="BITTER" />

                    <Label Margin="0, 0, 32, 0" FontSize="24" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="End" Text="about today?" />

                </StackLayout>

                <Image Source="lemon1" WidthRequest="100" HorizontalOptions="Start" />

            </StackLayout>

            <ListView Grid.Row="2" ItemsSource="{Binding Complaints}" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                                <Label Text="{Binding Text}" FontSize="Large" />
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackLayout Grid.Column="0" Orientation="Vertical">
                                            <ImageButton Source="up.png" WidthRequest="50" Aspect="AspectFit" />
                                            <ImageButton Source="down.png" WidthRequest="50" Aspect="AspectFit" />
                                        </StackLayout>
                                        <StackLayout Grid.Column="1" Orientation="Vertical">
                                            <Label Text="{Binding Text}" FontSize="Large" />
                                            <Label Text="{Binding Creator.Username}" FontSize="Medium" />
                                            <Label Text="{Binding Timestamp}" FontSize="Caption" />
                                            <Label Text="#tag1 #tag2 #tag3" FontSize="Caption"/>
                                        </StackLayout>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackLayout Grid.Column="0" Orientation="Vertical">
                                            <Label Text="Favorite" FontSize="Medium" HorizontalTextAlignment="Center"/>
                                        </StackLayout>
                                        <StackLayout Grid.Column="1" Orientation="Vertical">
                                            <Label Text="View Progress" FontSize="Medium"  HorizontalTextAlignment="Center"/>
                                        </StackLayout>
                                        <StackLayout Grid.Column="2" Orientation="Vertical">
                                            <Label Text="Report" FontSize="Medium"  HorizontalTextAlignment="Center"/>
                                        </StackLayout>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>



        </Grid>

    </ContentPage.Content>
</ContentPage>
