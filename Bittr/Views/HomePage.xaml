<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="BITTR"
             xmlns:controls="clr-namespace:Bittr.Controls;assembly=Bittr"
             x:Class="Bittr.Views.HomePage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>


                    <StackLayout Grid.Row="0"
                                 Orientation="Horizontal"
                                 HorizontalOptions="FillAndExpand"
                                 Padding="16">

                        <Label
                            Margin="0, 0, 32, 0"
                            FontSize="24"
                            HorizontalOptions="StartAndExpand"
                            HorizontalTextAlignment="End"
                            >
                    
                            <Label.FormattedText>
                                <FormattedString>
                                    <FormattedString.Spans>
                                        <Span Text="What are you " />
                                        <Span Text="BITTER"
                                              FontAttributes="Bold"
                                              FontSize="72" />
                                        <Span Text=" about today?" />
                                    </FormattedString.Spans>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Image Source="lemon1"
                               WidthRequest="100"
                               HorizontalOptions="Start" />

                    </StackLayout>
                </Grid>

                <StackLayout>
                    <ListView x:Name="ComplaintFeed"
                              HasUnevenRows="True"
                              SeparatorVisibility="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame Margin="0,10,0,10"
                                           CornerRadius="0">
                                        <StackLayout>
                                            <Image Source="{Binding ImageURL}"
                                                   Aspect="AspectFill"
                                                   HorizontalOptions="FillAndExpand"
                                                   HeightRequest="150"
                                                   Margin="-20,-20,-20,0"/>
                                            <Label Text="{Binding Title}"
                                                   FontSize="{StaticResource TitleFontSize}"
                                                   FontFamily="{StaticResource LightFontFamily}"/>
                                            <Label Text="{Binding Description}"
                                                   FontSize="Body"
                                                   FontFamily="{StaticResource RegularFontFamily}"/>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <StackLayout Grid.Row="0"
                                                             Grid.Column="0">
                                                             <Label Text="👍"
                                                                    HorizontalTextAlignment="Center"/>
                                                             <Label Text="{Binding Upvotes}"
                                                                    HorizontalTextAlignment="Center"/>
                                                </StackLayout>
                                                <StackLayout Grid.Row="0"
                                                             Grid.Column="2">
                                                             <Label Text="👎"
                                                                    HorizontalTextAlignment="Center"/>
                                                             <Label Text="{Binding Downvotes}"
                                                                    HorizontalTextAlignment="Center"/>
                                                </StackLayout>
                                            </Grid>
                                            <ProgressBar Progress="{Binding Progress}"
                                                         Margin="-20,20,-20,-20"
                                                         ProgressColor="Green"
                                                         HorizontalOptions="FillAndExpand"/>
                                        </StackLayout>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
