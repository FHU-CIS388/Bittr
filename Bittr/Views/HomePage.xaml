<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Bittr.Views.HomePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:services="clr-namespace:Bittr.Services"
    xmlns:circle="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
    BackgroundColor="{StaticResource VeryLightYellow}"
    Title="BITTR">

    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <StackLayout
                Grid.Row="0"
                Padding="16"
                Orientation="Horizontal"
                HorizontalOptions="StartAndExpand">

                <StackLayout Orientation="Vertical">
                    <Label
                        Margin="0,0,32,0"
                        FontFamily="{StaticResource RegularFont}"
                        FontSize="24"
                        HorizontalTextAlignment="End"
                        Text="What are you "
                        HorizontalOptions="FillAndExpand" />

                    <Label
                        Margin="0,0,32,0"
                        FontFamily="{StaticResource BoldFont}"
                        FontSize="66"
                        HorizontalTextAlignment="End"
                        Text="BITTER"
                        HorizontalOptions="FillAndExpand" />

                    <Label
                        Margin="0,0,32,0"
                        FontFamily="{StaticResource RegularFont}"
                        FontSize="24"
                        HorizontalTextAlignment="End"
                        Text="about today?"
                        HorizontalOptions="FillAndExpand" />

                </StackLayout>

                <Image
                    WidthRequest="100"
                    Source="lemon1"
                    HorizontalOptions="Start" />

            </StackLayout>

            <StackLayout
                Grid.Row="1"
                Padding="16"
                Orientation="Horizontal">
                <Entry
                    Placeholder="Loyd is freezing cold."
                    Text="{Binding NewComplaint.Text}"
                    HorizontalOptions="FillAndExpand" />

                <ImageButton
                    Padding="10"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="{StaticResource MediumYellow}"
                    BorderColor="{StaticResource DarkYellow}"
                    Command="{Binding PostComplaintCommand}"
                    Source="return.png"
                    HorizontalOptions="End" />
            </StackLayout>

            <ListView
                x:Name="ComplaintListView"
                Grid.Row="2"
                Margin="16"
                HasUnevenRows="True"
                ItemsSource="{Binding Complaints}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>

                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />

                                </Grid.RowDefinitions>

                                <Grid
                                    Grid.Row="0"
                                    Margin="0"
                                    Padding="0"
                                    >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70" />

                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="50" />
                                    </Grid.RowDefinitions>


                                    <!--  profile picture, profile name, timestamp, report button  -->
                                    <StackLayout Grid.Column="0" >
                                        <circle:CircleImage
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            WidthRequest="70"
                                            HeightRequest="70"
                                            Aspect="AspectFill"
                                            BorderColor="{StaticResource MediumYellow}"
                                            BorderThickness="2"
                                            Source="dshannon.jpg"
                                            TranslationY="0"
                                            HorizontalOptions="Center" />

                                        <Label
                                            FontSize="Medium"
                                            HorizontalTextAlignment="Center"
                                            Text="David Shannon"
                                            TextColor="White"
                                            HorizontalOptions="Center" />
                                        <BoxView HeightRequest="2" />
                                        <Label
                                            Text="10:31 AM"
                                            TextColor="White"
                                            HorizontalOptions="Center" />
                                        <Label
                                            Text="REPORT"
                                            TextColor="Red"
                                            HorizontalOptions="Center" />

                                    </StackLayout>


                                    <!--  box view to make text box for complaint  -->
                                    <BoxView
                                        Grid.Column="1"                                       
                                        CornerRadius="10"
                                        BackgroundColor="{StaticResource VeryLightYellow}"/>

                                    <!--  complaint and tags  -->
                                    <StackLayout Grid.Row="0" Grid.Column="1" Padding="10,0,0,0">
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            FontSize="18"
                                            Text="{Binding Text}"
                                            TextColor="Black" />
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="0,10,0,0"
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            Text="#cold #angry"
                                            TextColor="Black" />
                                    </StackLayout>

                                    <!--  up arrow  -->
                                    <StackLayout
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        HorizontalOptions="Start"
                                        VerticalOptions="CenterAndExpand">

                                        <ImageButton
                                            IsVisible="{Binding HasUpvoted, Converter={services:InverseBoolConverter}}"
                                            x:Name="upArrowNotVoted"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            WidthRequest="60"
                                            HeightRequest="60"
                                            Padding="10"
                                            Aspect="AspectFit"
                                            Source="up.png"
                                            HorizontalOptions="Center"
                                            VerticalOptions="CenterAndExpand"

                                            Command="{Binding Path=BindingContext.UpvoteCommand, Source={x:Reference ComplaintListView}}"
                                            CommandParameter="{Binding .}"
                                            />

                                        <ImageButton
                                            IsVisible="{Binding HasUpvoted}"
                                            x:Name="upArrowVoted"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            WidthRequest="60"
                                            HeightRequest="60"
                                            Padding="0"
                                            Aspect="AspectFit"
                                            Source="up.png"
                                            HorizontalOptions="Center"
                                            VerticalOptions="CenterAndExpand"

                                            Command="{Binding Path=BindingContext.UpvoteCommand, Source={x:Reference ComplaintListView}}"
                                            CommandParameter="{Binding .}"
                                            />

                                        <Label
                                            FontSize="14"
                                            Text="{Binding Upvotes}"
                                            TextColor="Black"
                                            HorizontalOptions="Center" />
                                    </StackLayout>


                                    <!--  down arrow  -->
                                    <StackLayout
                                        Grid.Row="1"
                                        Grid.Column="2" 
                                        
                                        HorizontalOptions="Start"
                                        VerticalOptions="CenterAndExpand">

                                        <ImageButton
                                            x:Name="downArrow"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            WidthRequest="40"
                                            Aspect="AspectFit"
                                            Source="down.png"
                                            HorizontalOptions="Center"
                                            VerticalOptions="CenterAndExpand" />
                                        <Label
                                            FontSize="14"
                                            Text="{Binding Downvotes}"
                                            TextColor="Black"
                                            HorizontalOptions="Center" />
                                    </StackLayout>

                                    

                                    <!--  lemon favorite icon button  -->
                                    <ImageButton
                                        x:Name="lemon"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        WidthRequest="43"
                                        Source="lemon7.jpg"
                                        HorizontalOptions="End"
                                        VerticalOptions="CenterAndExpand" />

                                    <!--  status label  -->
                                    <Label
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Text="Status: in progress"
                                        TextColor="White"
                                        HorizontalOptions="Center" />

                                </Grid>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>



        </Grid>

    </ContentPage.Content>
</ContentPage>
