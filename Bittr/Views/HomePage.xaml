<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Bittr.Views.HomePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:Bittr.Behaviors"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    Title="BITTR">

    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <StackLayout
                Grid.Row="0"
                Padding="16"
                Orientation="Horizontal"
                HorizontalOptions="StartAndExpand"
                IsVisible="false">

                <StackLayout Orientation="Vertical">
                    <Label
                        Margin="0,0,32,0"
                        FontFamily="{StaticResource RegularFont}"
                        FontSize="24"
                        HorizontalTextAlignment="End"
                        Text="What are you "
                        HorizontalOptions="FillAndExpand" />

                    <Label
                        Margin="0,0,32,0"
                        FontFamily="{StaticResource BoldFont}"
                        FontSize="66"
                        HorizontalTextAlignment="End"
                        Text="BITTER"
                        HorizontalOptions="FillAndExpand" />

                    <Label
                        Margin="0,0,32,0"
                        FontFamily="{StaticResource RegularFont}"
                        FontSize="24"
                        HorizontalTextAlignment="End"
                        Text="about today?"
                        HorizontalOptions="FillAndExpand" />

                </StackLayout>

                <Image
                    WidthRequest="100"
                    Source="lemon1"
                    HorizontalOptions="Start" />

            </StackLayout>

            <StackLayout
                Grid.Row="1"
                Padding="16"
                Orientation="Horizontal">
                <Entry
                    Placeholder="Loyd is freezing cold."
                    Text="{Binding NewComplaint.Text}"
                    HorizontalOptions="FillAndExpand" />

                <ImageButton
                    Padding="10"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="{StaticResource MediumYellow}"
                    BorderColor="{StaticResource DarkYellow}"
                    Command="{Binding PostComplaintCommand}"
                    Clicked="ScrollToTop"
                    Source="return.png"
                    HorizontalOptions="End" />
            </StackLayout>

            <ListView x:Name="ComplaintFeed"
                        Grid.Row="2"
                        HasUnevenRows="True"
                        SeparatorVisibility="None"
                        ItemsSource="{Binding Complaints}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <yummy:PancakeView BackgroundColor="White"
                                    CornerRadius="2"
                                    HasShadow="True"
                                    Margin="10,10,10,10">
                                <StackLayout Padding="10,10,10,10">
                                    <Image Source="{Binding ImageName}"
                                            Aspect="AspectFill"
                                            HorizontalOptions="FillAndExpand"
                                            HeightRequest="150"
                                            Margin="-20,-20,-20,0">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="ComplaintTapped" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <Label Text="{Binding Title}"
                                            FontSize="{StaticResource TitleFontSize}"
                                            FontFamily="{StaticResource LightFontFamily}"/>
                                    <Label FormattedText="{Binding Text}"
                                            FontSize="Body"
                                            FontFamily="{StaticResource RegularFontFamily}">
                                        <Label.Behaviors>
                                            <behaviors:HashtagBehavior Command="{Binding HashtagCommand}" HashtagColor="Blue" />
                                        </Label.Behaviors>
                                    </Label>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <StackLayout Grid.Row="0"
                                                        Grid.Column="0">
                                                        <Label Text="👍"
                                                            HorizontalTextAlignment="Center">
                                                            <Label.GestureRecognizers>
                                                                <TapGestureRecognizer Tapped="Upvote" />
                                                            </Label.GestureRecognizers>
                                                        </Label>
                                                        <Label x:Name="UpvoteCount"
                                                            Text="{Binding Upvotes.Count}"
                                                            HorizontalTextAlignment="Center"/>
                                        </StackLayout>
                                        <StackLayout Grid.Row="0"
                                                        Grid.Column="1">
                                                        <Label Text="❤️"
                                                            HorizontalTextAlignment="Center">
                                                            <Label.GestureRecognizers>
                                                                <TapGestureRecognizer Tapped="Favorite" />
                                                            </Label.GestureRecognizers>
                                                        </Label>
                                                        <Label x:Name="FavoriteCount"
                                                            Text="{Binding Favorites.Count}"
                                                            HorizontalTextAlignment="Center"/>
                                        </StackLayout>
                                        <StackLayout Grid.Row="0"
                                                        Grid.Column="2">
                                                        <Label Text="👎"
                                                            HorizontalTextAlignment="Center">
                                                            <Label.GestureRecognizers>
                                                                <TapGestureRecognizer Tapped="Downvote" />
                                                            </Label.GestureRecognizers>
                                                        </Label>
                                                        <Label x:Name="DownvoteCount"
                                                            Text="{Binding Downvotes.Count}"
                                                            HorizontalTextAlignment="Center"/>
                                        </StackLayout>
                                    </Grid>
                                    <ProgressBar Progress="{Binding Progress}"
                                                    Margin="-10,10,-10,-10"
                                                    ProgressColor="Green"
                                                    ScaleY="4"
                                                    WidthRequest="100"/>
                                </StackLayout>
                            </yummy:PancakeView>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>

    </ContentPage.Content>
</ContentPage>