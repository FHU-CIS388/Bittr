<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Bittr.Views.ProfilePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PROFILE">
    <ContentPage.Content>
        <StackLayout
            Margin="32"
            HorizontalOptions="FillAndExpand"
            Orientation="Vertical"
            Spacing="8">
            <Label Text="Name" />
            <Entry
                x:Name="username"
                HorizontalOptions="FillAndExpand"
                Text="{Binding Name}" />
            <Label Text="Bio" />
            <Entry
                x:Name="userbio"
                HorizontalOptions="FillAndExpand"
                Text="{Binding Bio}"
                VerticalOptions="StartAndExpand" />
            <Button Clicked="Update" Text="Update User Info" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
